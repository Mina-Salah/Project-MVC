
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
} 

<h1>All Department</h1>

<br />
<a asp-action="Create" class=" btn btn-primary"> Create new Department </a>
<br />
<br />

@if (Model?.Count() > 0)
{
    <table class="table table-dark">
        <thead class="table-primary">
            <tr>
                <th>@Html.DisplayNameFor(x=>x.Code)</th>
                <th>@Html.DisplayNameFor(x=>x.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var Itme in Model)
            {
                <tr>
                    <td>@Itme.Code</td>
                    <td>@Itme.Name</td>
                    <td>
                        <a class="btn btn-success" asp-controller="Department" asp-action="Details" asp-route-id="@Itme.Id">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>

                     <td>
                        <a class="btn btn-warning" asp-controller="Department" asp-action="Update" asp-route-id="@Itme.Id">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>

                    <td>
                        <a class="btn btn-danger" asp-controller="Department" asp-action="Delete" asp-route-id="@Itme.Id">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>no Department Found</h3>

    </div>
}

<div asp-validation-summary="All" class="text-danger"></div>


