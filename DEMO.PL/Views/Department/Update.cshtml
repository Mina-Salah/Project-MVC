@model Department

<div class="row">
    <div class="col-6">
        <form asp-action="Update" asp-controller="Department" method="post">
            <div class="form-group">
                <input asp-for="Id" type="hidden" /> <!-- Include a hidden field for the department Id -->
                <label asp-for="Code" class="col-form-label">Code:</label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="col-form-label">Name:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-action="Index" asp-controller="Department" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
