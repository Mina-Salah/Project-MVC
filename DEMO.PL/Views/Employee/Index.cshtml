@model IEnumerable<Employeeviewmodle>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employee</h1>

<br />
<a asp-action="Create" class=" btn btn-primary"> Create new Employee </a>
<br />
<br />

<form class="my-3" asp-action="Index" asp-controller="Employee">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="search..." name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block"/>
        </div>
    </div>
</form>

@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>@Html.DisplayNameFor(m => m.Name)</th>
                <th>@Html.DisplayNameFor(m => m.Image)</th>
                <th>@Html.DisplayNameFor(m => m.Address)</th>
                <th>@Html.DisplayNameFor(m => m.Email)</th>
                <th>@Html.DisplayNameFor(m => m.Salary)</th>
                <th>@Html.DisplayNameFor(m => m.HireDate)</th>
                <th>@Html.DisplayNameFor(m => m.IsActive)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="table-dark">
            @foreach (var itme in Model)
            {
                <tr>
                    <td>@itme.Name</td>
                    <td>
                        <img src="~/File/Images/@itme.imageURL" class="img-circle" height="40" width="40" alt="Employee"/>
                    </td>
                    <td>@itme.Address</td>
                    <td>@itme.Email</td>
                    <td>@itme.Salary</td>
                    <td>@itme.HireDate.Day
                        -@itme.HireDate.Month
                        -@itme.HireDate.Year
                     </td>
                    <td>@itme.IsActive</td>

                    <td>
                        <a class="btn btn-success" asp-controller="Employee" asp-action="Details" asp-route-id="@itme.Id">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>

                    <td>
                        <a class="btn btn-warning" asp-controller="Employee" asp-action="Update" asp-route-id="@itme.Id">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>

                    <td>
                        <a class="btn btn-danger" asp-controller="Employee" asp-action="Delete" asp-route-id="@itme.Id">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>no Department Found</h3>

    </div>
}

