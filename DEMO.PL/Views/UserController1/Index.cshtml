@model IEnumerable<AplicationUser>
@{
    ViewData["Title"] = "Index";
}

<h1>All Users</h1>

<br />
<br />


<form class="my-3" asp-action="Index" asp-controller="UserController1">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="search By Email" name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>
    </div>
</form>

@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>@Html.DisplayNameFor(m => m.Id)</th>
                <th>@Html.DisplayNameFor(m => m.UserName)</th>
                <th>@Html.DisplayNameFor(m => m.Email)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="table-dark">
            @foreach (var itme in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => itme.Id)</td>
                    <td>@Html.DisplayFor(m => itme.UserName)</td>
                    <td>@Html.DisplayFor(m => itme.Email)</td>
                    <partial name="_ButtonsPartialView" model="itme.Id.ToString()" />
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>no Department Found</h3>

    </div>
}

